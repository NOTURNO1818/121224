var vidas = 5 

    
if(vidas <= 0){
      println("tu ta morto")
    
}else if(vidas == 1){
    println("tu ta morrendo")    
}else if(vidas == 2){
    println(" ce não ta muito bem, se cuida ae")
}else if(vidas == 3){
    println("tu ta de boa mais come menos miojo")
}else if(vida == 4){
    println("vc ta tranquilo pode curti a vida ")
    
}else{
    println("morre ai mano ta sem graça ver vc vivo")
}
 
